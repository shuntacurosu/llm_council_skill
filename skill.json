{
  "name": "llm-council",
  "version": "1.0.0",
  "description": "LLM Council - A Claude Skill for collective intelligence using multiple LLMs",
  "skillType": "python",
  "entryPoint": "scripts/run.py",
  "setupScript": "scripts/setup_environment.py",
  "metadata": {
    "author": "LLM Council Contributors",
    "tags": ["llm", "collective-intelligence", "multi-model", "peer-review"],
    "license": "MIT"
  },
  "capabilities": {
    "textAnalysis": true,
    "codeReview": true,
    "consensus": true
  },
  "configuration": {
    "requiresApiKey": true,
    "apiKeyName": "OPENROUTER_API_KEY",
    "configFile": "scripts/.env"
  },
  "usage": {
    "setup": "python scripts/setup_environment.py",
    "command": "python scripts/run.py council_skill.py",
    "examples": [
      {
        "description": "Ask the council a question",
        "command": "python scripts/run.py council_skill.py \"What is the best approach to implement caching in a web application?\""
      },
      {
        "description": "Use git worktrees for code work",
        "command": "python scripts/run.py council_skill.py \"Refactor this function for better performance\" --worktrees"
      },
      {
        "description": "List conversation history",
        "command": "python scripts/run.py council_skill.py --list"
      },
      {
        "description": "Show setup instructions",
        "command": "python scripts/run.py council_skill.py --setup"
      },
      {
        "description": "Check virtual environment status",
        "command": "python scripts/setup_environment.py --check"
      }
    ]
  },
  "dependencies": {
    "python": ">=3.8",
    "packages": [
      "httpx",
      "python-dotenv"
    ]
  }
}
